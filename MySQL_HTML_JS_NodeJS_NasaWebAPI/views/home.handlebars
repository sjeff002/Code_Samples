<h1> Here are your excersizes!</h1>
<h2>On this page you can add new excersizes, delete excersizes and update existing excersizes!</h2>


<form id="addEx">
	<fieldset>
		<legend>Add a New Exercise</legend>
		<label>Exercise Name: </label> <input type="text" name="name" id="name"/>
		<label>Reps: </label> <input type="number" name="reps" id="reps" />
		<label>Weight: </label> <input type="number" name="weight" id="weight" />
		<label>Date: </label> <input type="date" name="date" id="date" />
		<label>lbs: </label> <input type="number" name="lbs" id="lbs" min="0" max="1" />
	</fieldset>
	<input type="submit" name="add" value="Add Exercise" id="addExform" />
</form>

<table id="myEx">

	<tr>
		<th>Name</th>
		<th>Reps</th>
		<th>Weight</th>
		<th>Date</th>
		<th>lbs(1) or kgs(0)</th>
	</tr>

	{{#each results}}
		<tr>
			<td>{{this.name}}</td>
			<td>{{this.reps}}</td>
			<td>{{this.weight}}</td>
			<td>{{this.date}}</td>
			<td>{{this.lbs}}</td>

			<td> <a href= "/update?id={{this.id}}"><input type = "button" value="Edit"></a>

			<td> <input type="button" name="del" value="Delete" onClick="delEx('myEx',{{this.id}})">
				 <input type= "hidden" id="{{this.id}}">
			</td>

		</tr>
	{{/each}}
</table>


<script src="./functions.js"></script>